    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "args": [
                "test/tests"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Thumbnails",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "args": [
                "test/tests",
                "--grep=thumbnail"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Test Thumbnails",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test.js",
        }
    ]
}